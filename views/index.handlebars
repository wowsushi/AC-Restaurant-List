<!-- search bar -->
<div class="container search-bar">
  <div class="search-bar-outer">
    <div class="search-bar-inner">
      <form action="/">
        <h4 class="mb-2">尋找餐廳：</h4>
        <div class="input-group">
          <input type="text" name="searchTerm" class="form-control" placeholder="輸入餐廳、分類" aria-label="Restaurant Name..." value="{{ searchTerm }}" aria-describedby="search-button">
          <div class="input-group-append">
            <button class="btn btn-major" type="submit" id="search-button"><i class="fas fa-search"></i></button>
          </div>
        </div>
      </form>
    </div>
  </div>
</div>


<!-- restaurant list -->
<div class="container mt-5">
  <div class="search-content d-flex justify-content-end">
    <div class="content-control ">
      <span>Sort Direction</span>
      <div class="d-flex justify-content-end mr-5 pr-5 mb-4">
        <a href="/?searchTerm={{searchTerm}}&direction=asc&sortBy={{sortBy}}" role="button" class="btn btn-secondary mr-2"><i class="fas fa-chevron-up btn-secondary"></i></a>
        <a href="/?searchTerm={{searchTerm}}&direction=desc&sortBy={{sortBy}}" role="button" class="btn btn-secondary mr-2"><i class="fas fa-chevron-down btn-secondary"></i></a>
      </div>
    </div>
    <div class="content-control">
      <span>Sort By</span>
      <div class="dropdown d-flex justify-content-end mr-5 pr-5 mb-4">
        <button class="btn btn-secondary dropdown-toggle" type="button" id="dropdownMenuButton" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
          {{chTypeName}}
        </button>
        <div class="dropdown-menu" aria-labelledby="dropdownMenuButton">
          {{#each sortTypes}}
             <a class="dropdown-item" href="/?searchTerm={{../searchTerm}}&direction={{../direction}}&sortBy={{@key}}">{{this.display}}</a>
          {{/each}}
        </div>
      </div>
    </div>
  </div>

  <div class="row">
    <div class="col-md-10 col-12 mx-auto">
      <div class="card-group">
        {{#each restaurants}}
          <div class="col-4 restaurant-content">
            <div class="card mb-3">
              <a href="/restaurants/{{ this.id }}" class="text-secondary">
                <img class="card-img-top" src={{ this.image }} alt={{ this.name }}>
                <div class="card-body p-3">
                  <h6 class="card-title mb-1">{{ this.name }}</h6>

                  <div class="restaurant-category mb-1">
                    <i class="fas fa-utensils pr-2"></i> {{ this.category}}
                  </div>

                  <span class="badge badge-pill badge-danger font-weight-normal">
                    {{ this.rating}}
                    <i class="fas fa-star fa-xs"></i>
                  </span>
                </div>
              </a>
                <div class="card-footer text-muted d-flex justify-content-between">
                  <a href="/restaurants/{{ this.id }}/edit" class="btn btn-info" role="button">編輯</a>
                  <a href="/restaurants/{{ this.id }}" class="btn btn-info" role="button">查看詳細</a>
                  <form action="/restaurants/{{ this.id }}/delete?_method=DELETE" method="POST">
                    <button type="submit" class="btn btn-danger">刪除</button>
                  </form>
                </div>
              </div>
          </div>
        {{/each}}
      </div>
    </div>
  </div>
</div>
